extends  ../durable_medical_layout
block scripts
    script(src="/javascripts/durable_medical_company.js")
block content
    br
    ol.breadcrumb
        li
            a(href="/medical_add_asset/medical_add_asset") หน้าหลัก
        li.active รายการบริษัท
    .well.well-sm#mdlSearch
        div.form-inline
            .row
                .col-md-5
                    .form-group
                        label บริษัท
                        | &nbsp;&nbsp;
                        input#txtSearch(type="text",placeholder="Search..").form-control
                        | &nbsp;&nbsp;
                        button#btnSearch(type="button").btn.btn-success.btn-sm ค้นหา
    .panel.panel-primary
        .panel-heading
            h3.panel-title
                i.fa.fa-comments-o
                | &nbsp; รายการบริษัท
        .panel-body
            button.btn.btn-danger.pull-right#btnShowSearch
                i.fa.fa-search
            button.btn.btn-success.pull-right#btnShowModal
                i.fa.fa-plus
                | &nbsp; เพิ่มบริษัท
            ul.pagination(data-name="paging")
            table.table.striped#tblCompany
                thead
                    tr
                        td.h4 ลำดับ
                        td.h4 ชื่อบริษัท
                        td.h4 Tel.
                        td.h4 แก้ไข/ลบ
                    tbody
            ul.pagination(data-name="paging")

    .modal.fade#mdlNew(tabindex='-1',role='dialog')
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(type='button', data-dismiss='modal', aria-lable='Close')
                        span(aria-hidden='true') &times;
                    h3.modal-title  เพิ่ม/แก้ไขรายการ
                    | &nbsp;
                    | &nbsp;
                    | &nbsp;
                .modal-body
                    .alert.alert-danger.alert-dismissable(role="alert",style="display: none;")#divAlert
                        button(type="button",data-dismiss="alert",aria-label="Close").close
                            span(aria-hidden="true")
                        p บริษัทนี้ได้มีในระบบแล้ว
                    input(type="hidden" value="")#txtId
                    .form-group
                        label(for="txt") ชื่อบริษัท
                        input(type="text" placeholder="ชื่อบริษัท")#txtShopName.form-control
                    .form-group
                        label(for="txtAddress") ที่อยู่
                        textarea#txtAddress(type="text" rows="3" placeholder="ที่อยู่").form-control
                    .form-group
                        label(for="txt") Tel.
                        input(type="text" placeholder="เบอร์โทรศัพท์")#txtTel.form-control
                    .form-group
                        label(for="txt") service
                        input(type="text" placeholder="การบริการ")#txtService.form-control
                    .modal-footer
                        button.btn.btn-primary#btnSave
                            i.fa.fa-save
                            | &nbsp; บันทึก
                        button.btn.btn-danger(data-dismiss="modal")
                            | &nbsp; ปิดหน้าต่าง